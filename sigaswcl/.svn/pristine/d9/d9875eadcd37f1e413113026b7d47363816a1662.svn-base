@import '../../../color.scss';

.upload-btn-wrapper {
    position: relative;
    overflow: hidden;
    display: inline-block;
  }
  
  .upload-btn-wrapper input[type=file] {
    font-size: 100px;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
  }

  .padding-error {
    padding-top: 15px;
  }

  .padding-reload {
    margin-top: 23px;
  }
  